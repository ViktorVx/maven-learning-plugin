<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>ru.sbrf.ufs.routing</groupId>
	<artifactId>ufs-routing-db</artifactId>
	<version>7.1.1</version>

	<properties>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.assembly.plugin.version>2.6</maven.assembly.plugin.version>
		<oracle.driver.version>11.2.0.4</oracle.driver.version>
		<liquibase.version>3.5.1</liquibase.version>
		<maven.properties.plugin.version>1.0.0</maven.properties.plugin.version>
		<maven.liquibase.version>${liquibase.version}</maven.liquibase.version>
		<sonar.maven.plugin.version>3.6.0.1398</sonar.maven.plugin.version>
		<logging>INFO</logging>
		<verbose>true</verbose>
		<liquibase.changelogSchemaName/>
		<liquibase.block.dbSuffix/>
		<liquibase.ufsadmin.username/>
		<liquibase.default.password/>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>${maven.assembly.plugin.version}</version>
				<executions>
					<execution>
						<id>create-archive</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptor>assembly.xml</descriptor>
							<appendAssemblyId>false</appendAssemblyId>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.sonarsource.scanner.maven</groupId>
					<artifactId>sonar-maven-plugin</artifactId>
					<version>${sonar.maven.plugin.version}</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<finalName>${project.artifactId}</finalName>
	</build>

	<profiles>
		<profile>
			<id>liquibase</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.liquibase</groupId>
						<artifactId>liquibase-maven-plugin</artifactId>
						<version>${maven.liquibase.version}</version>
						<executions>
							<execution>
								<id>common</id>
								<configuration>
									<changeLogFile>src/changelog.xml</changeLogFile>
								</configuration>
								<phase>compile</phase>
								<goals><goal>update</goal></goals>
							</execution>
						</executions>
						<configuration>
							<changelogSchemaName>${liquibase.changelogSchemaName}${liquibase.block.dbSuffix}</changelogSchemaName>
							<databaseChangeLogTableName>LIQ_DATABASECHANGELOG</databaseChangeLogTableName>
							<databaseChangeLogLockTableName>LIQ_DATABASECHANGELOGLOCK</databaseChangeLogLockTableName>
							<username>${liquibase.ufsadmin.username}${liquibase.block.dbSuffix}</username>
							<password>${liquibase.default.password}</password>
							<promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
							<verbose>${verbose}</verbose>
							<logging>${logging}</logging>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>com.oracle</groupId>
			<artifactId>ojdbc6</artifactId>
			<version>${oracle.driver.version}</version>
		</dependency>
		<dependency>
			<groupId>org.liquibase</groupId>
			<artifactId>liquibase-core</artifactId>
			<version>${liquibase.version}</version>
		</dependency>
	</dependencies>

</project>
